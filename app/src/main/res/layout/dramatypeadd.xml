<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@color/design_default_color_secondary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Drama Type"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/dramaType"
        android:layout_width="@dimen/width"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_height="@dimen/textViewHeight"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/width"
        android:layout_height="80dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dramaTypeOk"
            android:text="Ok"
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dramaTypeCancel"
            android:text="Cancel"
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>
</LinearLayout>