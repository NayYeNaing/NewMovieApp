<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/design_default_color_secondary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Title"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/animeTitle"
        android:layout_width="@dimen/width"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_height="@dimen/textViewHeight"/>

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Image"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/animeImage"
        android:layout_width="@dimen/width"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_height="@dimen/textViewHeight"/>

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Video"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <EditText
        android:id="@+id/animeVideo"
        android:layout_width="@dimen/width"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_height="@dimen/textViewHeight"/>

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Anime Series Title"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <Spinner
        android:id="@+id/animeSeriesTitle"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight" />

    <TextView
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight"
        android:text="Anime Type"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/paddingLeftText"
        android:textColor="@color/textColor"/>

    <Spinner
        android:id="@+id/animeTypeSpinner"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/textViewHeight" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/width"
        android:layout_height="100dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animeOk"
            android:text="Ok"
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animeCancel"
            android:text="Cancel"
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>


</LinearLayout>